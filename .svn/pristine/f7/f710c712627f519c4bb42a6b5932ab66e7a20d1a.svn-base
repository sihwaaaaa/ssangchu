package kr.co.poetrypainting.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import kr.co.poetrypainting.domain.CheatVO;
import kr.co.poetrypainting.domain.dto.PenaltyDTO;
import kr.co.poetrypainting.mapper.CheatMapper;

@Service
public class CheatServiceImpl implements CheatService {
  
  @Autowired
  private CheatMapper cheatMapper;

  // 신고 정보 추가
  @Override
  @Transactional
  public void insertCheat(CheatVO CheatVO) throws Exception {
    cheatMapper.insertCheat(CheatVO);
  }

  // 신고 정보 수정
  @Override
  @Transactional
  public void updateCheat(CheatVO CheatVO) throws Exception {
    cheatMapper.updateCheat(CheatVO);
  }

  // 신고 정보 삭제
  @Override
  @Transactional
  public void deleteCheat(Long chNo) throws Exception {
    cheatMapper.deleteCheat(chNo);
  }

  // 신고 정보 조회
  @Override
  public CheatVO selectCheat(Long chNo) throws Exception {
    return cheatMapper.selectCheat(chNo);
  }

  // 모든 신고 정보 조회
  @Override
  public List<CheatVO> selectAllCheats() throws Exception {
    return cheatMapper.selectAllCheats();
  }


  // 모든 신고 분류 정보 조회
  @Override
  public List<CheatVO> selectAllCheatCategories() throws Exception {
    return cheatMapper.selectAllCheats();
  }
  
  // 모든 신고 제재 정보를 조회
  
  @Override
  public List<PenaltyDTO> selectAllPenalties() throws Exception {
    return cheatMapper.selectAllPenalties();
  }

}