	@GetMapping("/list")
	public void list(Model model,Criteria cri){
		model.addAttribute("list", boardService.getListWhitAll(cri));
		model.addAttribute("page", new PageDto(boardService.getTotalCnt(), cri));
	}
	
	@GetMapping("/listaddr")
	public String listAddr(Model model,Criteria cri,HttpSession session){
		MemberVO member = (MemberVO)session.getAttribute("loginMember");
		if(member == null){
			
			return  "redirect:/member/login";
		}
		model.addAttribute("list", boardService.getListWithAddr(cri,member));
		model.addAttribute("page", new PageDto(boardService.getAddrCnt(member), cri));
		return "/board/listaddr";
	}
	
